{
  "compilerOptions": {
    "outDir": "./out",
    "lib": [
      "ES2022"
    ],
    "module": "Node16",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16",
    "typeRoots": [
      "../node_modules/@types",
      "../../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "../../../src/vscode-dts/vscode.d.ts"
  ]
}

